@addTagHelper *, Dosaaf
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Цены";
}

<div id="price-section">
    <div id="price-welcome-section">
        <div id="price-welcome-left-section">
            <h1>Стоимость подготовки водителей транспортных средств АН ПОО "Учебный Центр Гайского ДОСААФ"</h1>
            <p>Стоимость подготовки водителей транспортных средств установлена на основании приказа директора АН ПОО "Учебный Центр Гайского ДОСААФ" от 19.02.2021г.</p>
        </div>
        <div id="price-welcome-right-section">
            <img src="~/static/Images/car-loan.png" />
        </div>
    </div>
    <div id="price-category-section">
        <div id="price-category-text-section">
            <img src="~/static/Images/steering-wheel.png" />
            <h1>Категории водителей</h1>
        </div>
