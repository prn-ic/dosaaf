                <div id="price-category-price-card">
                    <h2>40 часов</h2>
                    <h2 class="count-education">1 месяц</h2>
                    <h1>18000 рублей</h1>
                </div>
            </div>
            <div class="price-category-category-card">
                <img src="~/static/Icons/delivery-truck.png" />
                <h1>Категория "C"</h1>
                <div id="price-category-price-card">
                    <h2>C "В" на "С"</h2>
                    <h2 class="count-education">1,5 месяца</h2>
                    <h1>23000 рублей</h1>
                </div>
            </div>
            <div class="price-category-category-card">
                <img src="~/static/Icons/car (1).png" />
                <h1>Категория "C"</h1>
                <div id="price-category-price-card">
                    <h2>C "С" на "В"</h2>
                    <h2 class="count-education">1,5 месяца</h2>
                    <h1>17500 рублей</h1>
