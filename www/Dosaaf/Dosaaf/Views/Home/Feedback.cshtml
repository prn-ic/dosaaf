@addTagHelper *, Dosaaf
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Dosaaf.Models.Review

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Отзывы";
}

<div id="review-main-section">
    <div id="review-section">
        <h1>Отзывы</h1>
        <div id="review-block-section">
            @foreach (var review in ViewBag.Reviews)
            {
                <div class="review">
                    <div class="reviewer-data-section">
                        <h3>@review.Name</h3>
                        <p>@review.TimeCreated</p>
                    </div>
                    <div class="reviewer-message-section">
                        <p>@review.Message</p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="send-review-main-section">
                <h1>Оставьте свой отзыв</h1>
                <form class="send-form" method="post" asp-action="Feedback">
                    <h1>Отзыв</h1>
                    <div class="application-point">
                        <label>Введите имя</label>
                        <input type="text" asp-for="Name" placeholder="Иван Иванов"/>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="application-point">
                        <label>Введите email</label>
                        <input type="email" asp-for="Email" placeholder="gaidosaaf@mail.ru"/>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="application-point">
                        <label>Введите сообщение</label>
                        <textarea asp-for="Message" rows="10"></textarea>
                        <span asp-validation-for="Message"></span>
                    </div>
                    <div class="application-point">
                        <input class="submit-changes" type="submit" value="Отправить отзыв" />
                    </div>
                </form>
            </div>
</div>