@addTagHelper *, Dosaaf
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Dosaaf.Models.OnlineEducationModel

@{
    ViewBag.Title = "Онлайн обучение";
    Layout = "../Shared/_Layout.cshtml";
}

<div id="online-education-main-section">
    <div id="online-page-education-section">
        <div id="online-education-left-section">
             <h1>Онлайн обучение</h1>
            <p>Заполнив данную форму, вы можете записаться на онлайн обучение. <br />Оставьте заявку и мы сообщим вам о онлайн обучении</p>
            <img src="~/static/Images/pngwing.com (1).png"/>
        </div>
        <div id="online-education-right-section">
            <form class="send-form" method="post">
                <img src="~/static/Images/car-loan.png" />
                <h1>Заявка на онлайн обучение</h1>
                <div class="application-point">
                    <label>Введите имя</label>
                    <input type="text" asp-for="FirstName" placeholder="Иван"/>
                </div>
                <div class="application-point">
                    <label>Введите фамилию</label>
                    <input type="text" asp-for="LastName" placeholder="Иванов"/>
                </div>
                <div class="application-point">
                    <label>Введите номер телефона</label>
                    <input type="text" asp-for="Phone" placeholder="83526242344"/>
                </div>
                <div class="application-point">
                    <label>Введите E-mail</label>
                    <input type="email" asp-for="Email" placeholder="gaidosaaf@mail.ru"/>
                </div>
                <div class="application-point">
                    <label>Выберите категорию</label>
                    <select asp-for="Category" asp-items="ViewBag.Categories"></select>
                </div>
                <div class="application-point">
                    <input class="submit-changes" type="submit" value="Отправить заявку" />
                </div>
            </form>
        </div>
    </div>
</div>